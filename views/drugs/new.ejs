<%- include('../partials/header') %>

<section class="hero is-light">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Add a Drug
      </h1>
      <h2 class="subtitle">
        Fill out the form
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <div class="container is-fluid">
    <div class="columns">
      <div class="column"></div>
        <div class="column is-half">
          <form id="new-form" action="/drugs" method="POST">

            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field">
                  <label class="label">Name</label>
                  <p class="control has-icons-left is-expanded">
                    <input class="input" type="text" name="name" placeholder="Tylenol" required autofocus>
                    <span class="icon is-small is-left">
                      <i class="fas fa-capsules"></i>
                    </span>
                  </p>
                </div>
                <div class="field">
                  <label class="label">Common Price</label>
                  <p class="control is-expanded has-icons-left">
                    <input class="input" type="text" name="price" placeholder="20" required pattern="[0-9].{0,10}">
                    <span class="icon is-small is-left">
                      <i class="fas fa-dollar-sign"></i>
                    </span>
                  </p>
                  <p class="help">Do not enter anything other than a number.</p>
                </div>
              </div>
            </div>

            
            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field is-narrow">
                  <label class="label">Generic?</label>
                  <div class="control">
                    <label class="radio">
                      <input type="radio" name="generic" value="Yes" id="true" required>
                      Yes
                    </label>
                    <label class="radio">
                      <input type="radio" name="generic" value="No" id="false" required>
                      No
                    </label>
                  </div>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field">
                  <label class="label">Image URL</label>
                  <div class="control has-icons-left is-expanded">
                    <span class="icon is-small is-left">
                      <i class="fas fa-image"></i>
                    </span>
                    <input class="input" type="text" name="image" placeholder="https//...">
                  </div>
                  <p class="help">Image URL is not required.</p>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field">
                  <label class="label">Dosage</label>
                  <div class="field has-addons">
                    <p class="control is-narrow has-icons-left">
                      <span class="icon is-small is-left">
                        <i class="fas fa-weight-hanging"></i>
                      </span>
                      <input class="input" type="text" name="dosage" placeholder="10" min="0" required pattern="[0-9].{0,10}">
                    </p>
                    <p class="control">
                      <a class="button is-static">
                        mg
                      </a>
                    </p>
                  </div>
                </div>
                <div class="field">
                  <label class="label">Family</label>
                  <div class="control">
                    <div class="select is-fullwidth">
                      <select name="family">
                        <option value="Antidepressant">Antidepressant</option>
                        <option value="Antipsychotic">Antipsychotic</option>
                        <option value="Barbituate">Barbituate</option>
                        <option value="Benzodiazepine">Benzodiazepine</option>
                        <option value="Narcotic">Narcotic</option>
                        <option value="Opiate">Opiate</option>
                        <option value="Sedative">Sedative</option>
                        <option value="Tranquilizer">Tranquilizer</option>
                      </select>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field">
                  <div class="control has-text-centered">
                    <button class="button is-primary" id="newDrug" type="submit">
                      Add Drug
                    </button>
                  </div>
                </div>
              </div>
            </div>
        </form>
      </div>
    <div class="column"></div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>